{
  "name": "Next.js TypeScript Project",
  "description": "Modern Next.js application with TypeScript, Vite, Biome, Zustand, Tailwind, and shadcn/ui",
  "type": "nextjs-web",
  "framework": "next.js",
  "language": "typescript",
  "version": "1.0.0",
  "tech_stack": {
    "frontend": {
      "framework": "next.js",
      "version": "latest",
      "features": ["app-router", "typescript", "tailwind"]
    },
    "build_tools": {
      "primary": "next",
      "testing": "vitest",
      "bundler": "turbopack"
    },
    "development": {
      "linting": "biome",
      "formatting": "biome",
      "type_checking": "typescript"
    },
    "ui": {
      "styling": "tailwindcss",
      "components": "shadcn/ui",
      "icons": "lucide-react"
    },
    "state_management": {
      "store": "zustand",
      "persistence": "zustand/middleware"
    }
  },
  "project_structure": {
    "root": [
      "package.json",
      "tsconfig.json",
      "next.config.js",
      "tailwind.config.js",
      "biome.json",
      "vitest.config.ts",
      ".env.local",
      ".env.example",
      ".gitignore",
      "README.md"
    ],
    "src": {
      "app": [
        "layout.tsx",
        "page.tsx",
        "globals.css",
        "loading.tsx",
        "error.tsx",
        "not-found.tsx"
      ],
      "components": [
        "ui/",
        "layout/",
        "features/"
      ],
      "lib": [
        "utils.ts",
        "types.ts",
        "constants.ts"
      ],
      "stores": [
        "index.ts",
        "app-store.ts"
      ],
      "hooks": [
        "use-app-store.ts"
      ],
      "styles": [
        "globals.css"
      ]
    },
    "public": [
      "favicon.ico",
      "images/"
    ],
    "tests": [
      "setup.ts",
      "__mocks__/",
      "utils/"
    ]
  },
  "dependencies": {
    "production": {
      "next": "latest",
      "react": "^18.0.0",
      "react-dom": "^18.0.0",
      "typescript": "^5.0.0",
      "tailwindcss": "^3.0.0",
      "zustand": "^4.0.0",
      "lucide-react": "latest",
      "clsx": "^2.0.0",
      "tailwind-merge": "^2.0.0"
    },
    "development": {
      "@biomejs/biome": "latest",
      "@types/node": "^20.0.0",
      "@types/react": "^18.0.0",
      "@types/react-dom": "^18.0.0",
      "vitest": "latest",
      "@vitejs/plugin-react": "latest",
      "jsdom": "latest",
      "@testing-library/react": "latest",
      "@testing-library/jest-dom": "latest"
    }
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "format": "biome format --write .",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "configuration_files": {
    "package.json": {
      "template": "nextjs-package.json",
      "customizations": ["name", "description", "author"]
    },
    "tsconfig.json": {
      "template": "nextjs-tsconfig.json",
      "strict": true,
      "incremental": true
    },
    "next.config.js": {
      "template": "nextjs-config.js",
      "features": ["experimental.turbo"]
    },
    "tailwind.config.js": {
      "template": "tailwind-config.js",
      "includes": ["shadcn", "animations"]
    },
    "biome.json": {
      "template": "biome-config.json",
      "rules": ["recommended", "typescript"]
    },
    "vitest.config.ts": {
      "template": "vitest-config.ts",
      "environment": "jsdom"
    }
  },
  "shadcn_components": {
    "init_command": "npx shadcn-ui@latest init",
    "default_components": [
      "button",
      "card",
      "input",
      "label",
      "toast",
      "dialog",
      "dropdown-menu",
      "navigation-menu"
    ],
    "config": {
      "style": "default",
      "rsc": true,
      "tsx": true,
      "tailwind": true
    }
  },
  "scaffolding_steps": [
    {
      "step": "create_project_structure",
      "description": "Create directory structure and basic files"
    },
    {
      "step": "install_dependencies",
      "description": "Install npm dependencies"
    },
    {
      "step": "setup_configuration",
      "description": "Configure TypeScript, Next.js, Tailwind, and Biome"
    },
    {
      "step": "initialize_shadcn",
      "description": "Initialize shadcn/ui components"
    },
    {
      "step": "setup_zustand_store",
      "description": "Create Zustand store structure"
    },
    {
      "step": "create_basic_components",
      "description": "Generate basic layout and UI components"
    },
    {
      "step": "setup_testing",
      "description": "Configure Vitest and testing utilities"
    },
    {
      "step": "validate_setup",
      "description": "Run type checking, linting, and build tests"
    }
  ],
  "validation_checks": [
    "typescript_compilation",
    "biome_linting",
    "next_build",
    "vitest_execution",
    "tailwind_compilation"
  ]
}