# Claude PM Framework Environment Configuration Template
# Copy this file to .env in your Claude PM root directory and configure as needed

# Core Configuration
# =================

# Claude PM Framework Root Directory
# This is the absolute path to your Claude PM installation
# Default: ~/Projects/Claude-PM
CLAUDE_PM_ROOT=/Users/masa/Projects/Claude-PM

# GitHub Integration
# ==================

# GitHub Personal Access Token for repository synchronization
# Create at: https://github.com/settings/tokens
# Permissions needed: repo, issues, projects
GITHUB_TOKEN=your_github_token_here

# Memory Service Configuration
# ============================

# mem0AI Service Host
CLAUDE_PM_MEM0AI_HOST=localhost

# mem0AI Service Port
CLAUDE_PM_MEM0AI_PORT=8002

# mem0AI Service Timeout (seconds)
CLAUDE_PM_MEM0AI_TIMEOUT=30

# mem0AI Authentication & Security
# =================================

# API Key for mem0AI service authentication (REQUIRED for production)
# Generate using: python -c "from claude_pm.integrations.security import generate_secure_api_key; print(generate_secure_api_key())"
# MEM0AI_API_KEY=your_secure_api_key_here

# TLS/SSL Configuration
MEM0AI_USE_TLS=false
MEM0AI_VERIFY_SSL=true

# Authentication Configuration
MEM0AI_AUTH_RETRY_ATTEMPTS=3
MEM0AI_AUTH_RETRY_DELAY=1.0
MEM0AI_MAX_AUTH_FAILURES=5
MEM0AI_AUTH_LOCKOUT_MINUTES=15

# Health Monitoring
# =================

# Enable health monitoring service
CLAUDE_PM_ENABLE_HEALTH_MONITORING=true

# Health check interval (seconds)
CLAUDE_PM_HEALTH_CHECK_INTERVAL=30

# Performance Metrics
# ===================

# Enable performance metrics collection
CLAUDE_PM_ENABLE_METRICS=true

# Metrics collection interval (seconds)
CLAUDE_PM_METRICS_INTERVAL=60

# Logging Configuration
# =====================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
CLAUDE_PM_LOG_LEVEL=INFO

# Enable verbose logging
CLAUDE_PM_VERBOSE=false

# Enable debug mode
CLAUDE_PM_DEBUG=false

# Service Management
# ==================

# Graceful shutdown timeout (seconds)
CLAUDE_PM_GRACEFUL_SHUTDOWN_TIMEOUT=30

# Service startup timeout (seconds)
CLAUDE_PM_STARTUP_TIMEOUT=60

# Alerting Configuration
# ======================

# Enable alerting system
CLAUDE_PM_ENABLE_ALERTING=true

# Alert threshold percentage
CLAUDE_PM_ALERT_THRESHOLD=60

# Custom Configuration
# ====================

# Add any additional environment variables your deployment needs
# All variables prefixed with CLAUDE_PM_ will be automatically loaded